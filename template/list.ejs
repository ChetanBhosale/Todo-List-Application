<%- include('partials/header'); -%>

<div class="box" id="heading">
    <h1><%= Date %></h1>
</div>

<div class="box">
   
        <% for(let i = 0;i< todoItems.length;i++){ %>
            
            <div class="item">
                <input type="checkbox">
                 <p> <%= todoItems[i] %> </p> 
            </div>
            <% } %>
            <form action="/" method="post">
                <input type="text" name="Data" placeholder="New Items" autocomplete="off">
                <button type="submit" class="btn" id="myButton">+</button>
            </form>
</div>

<script src="JS/main.js"></script>
    
</body>
</html>